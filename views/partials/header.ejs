<div class="header">
    <div class="logo_div">
        <a href="/"><img class="logo" src="/icons/sgLogo.png" alt="logo"></a>
        <a href="/"><div class="inventoryName">stashGrid</div></a>
    </div>
    <nav>
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/categories">Categories</a>
    </nav>
    <div>
        <form action="/products/search" method="POST">
            <input type="text" name="search" placeholder="search" required>
            <button class="searchSubmit" type="submit">search</button>
        </form>
    </div>

    <% if(locals.user){ %>
        <div class="userDiv">
            <%= user.display_name %> 
            <div class="userIcon"><img src="/icons/user.png" alt="userIcon"></div>
        </div>
    <% } %>

    <% if(!locals.user){ %>
        <div class="auth_links">
            <div><a href="/auth/login">Login</a></div>
            <div><a href="/auth/signUp">Sign up</a></div>
        </div>
    <% } %>
</div>